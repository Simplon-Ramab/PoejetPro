{% extends 'base.html.twig' %}

{% block body %}
<div class="container text-center">
            <div class="row justify-content-center">
              <div id="cacheform">
                <div class="text-center">
                    {{ form_start(edit_form, {attr: {'class': 'form-horizontal form-label-left', 'novalidate': 'novalidate', 'readonly': true}}) }}
                    <div class="form-group">
                        {{ form_label(edit_form.titre, null, {'label_attr': {'class': 'control-label ', 'style':'display:none'}}) }}
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            {{ form_widget(edit_form.titre, {'attr': {'class': 'form-control ','readonly': true, 'style':'display:none'}}) }}
                        </div>
                    </div>
                    <div class="form-group">
                        {{ form_label(edit_form.place, null, {'label_attr': {'class': 'control-label ', 'style':'display:none'}}) }}
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            {{ form_widget(edit_form.place, {'attr': {'class': 'form-control ','readonly': true, 'style':'display:none'}}) }}
                        </div>
                    </div>
                    <div class="form-group">
                        {{ form_label(edit_form.categorie, null, {'label_attr': {'class': 'control-label ', 'style':'display:none'}}) }}
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            {{ form_widget(edit_form.categorie, {'attr': {'class': 'form-control ', 'readonly': true, 'style':'display:none'}}) }}
                        </div>
                    </div>
                    <div class="form-group">
                        {{ form_label(edit_form.place, null, {'label_attr': {'class': 'control-label', 'style':'display:none'}}) }}
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            {{ form_widget(edit_form.place, {'attr': {'class': 'form-control','readonly': true, 'style':'display:none'}}) }}
                        </div>
                    </div>
                    <div class="form-group">
                        {{ form_label(edit_form.dateDebut, null, {'label_attr': {'class': 'control-label', 'style':'display:none'}}) }}
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            {{ form_widget(edit_form.dateDebut, {'attr': {'class': 'form-control','readonly': true, 'style':'display:none'}}) }}
                        </div>
                    </div>
                    <div class="form-group">
                        {{ form_label(edit_form.dateFin, null, {'label_attr': {'class': 'control-label', 'style':'display:none'}}) }}
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            {{ form_widget(edit_form.dateFin, {'attr': {'class': 'form-control','readonly': true, 'style':'display:none'}}) }}
                        </div>
                    </div>
                    <div class="form-group">
                        {{ form_label(edit_form.heureDebut, null, {'label_attr': {'class': 'control-label', 'style':'display:none'}}) }}
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            {{ form_widget(edit_form.heureDebut, {'attr': {'class': 'form-control','readonly': true, 'style':'display:none'}}) }}
                        </div>
                    </div>
                    <div class="form-group">
                        {{ form_label(edit_form.heureFin, null, {'label_attr': {'class': 'control-label', 'style':'display:none'}}) }}
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            {{ form_widget(edit_form.heureFin, {'attr': {'class': 'form-control','readonly': true, 'style':'display:none'}}) }}
                        </div>
                    </div>
                    <div class="form-group">
                        {{ form_label(edit_form.file, null, {'label_attr': {'class': 'control-label', 'style':'display:none'}}) }}
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            {{ form_widget(edit_form.file, {'attr': {'class': 'form-control','readonly': true, 'style':'display:none'}}) }}
                        </div>
                    </div>

                    <div class="form-group">
                        {{ form_label(edit_form.description, null, {'label_attr': {'class': 'control-label', 'style':'display:none'}}) }}
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            {{ form_widget(edit_form.description, {'attr': {'class': 'form-control','readonly': true, 'style':'display:none'}}) }}
                        </div>
                    </div>
                  </div>
                    {#{{ form_widget(edit_form) }}#}
                </div>
                <p><strong>Voulez-vous participer à cette événement {{ evenements.titre }}?</strong></p>

                <a href="{{ path('evenement_index') }}" class="btn btn-primary pull-left" >Retour à la liste</a>

                <input type="submit" value="Se desinscrire" class="btn btn-success" />

                {{ form_end(edit_form) }}

            </div>

        </div>

{% endblock %}

{% block stylesheets %}
<style>

#cacheform{
  display: none;
}
</style>
{% endblock %}
