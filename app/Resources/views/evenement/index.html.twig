{% extends 'base.html.twig' %}

{% block body %}

<!-- Content -->
<div class="parallax-container center valign-wrapper">
  <div class="container" style="top:55px;">
    <div class="row">
      <div class="col s12 white-text">
        <div class="row">
          <form class="col s12 m10 l10 white offset-m2 offset-l1">
            <div class="row" style="padding-right:25px;">
              <div class="input-field col s12 m3 l3">
                <i class="material-icons prefix">date_range</i>
                <input type="text" class="datepicker">
                <label for="icon_date">Date</label>
              </div>
              <div class="input-field col s12 m4 l4">
                <i class="material-icons prefix">edit</i>
                <input id="icon_mot" type="tel" class="validate">
                <label for="icon_mot">Mot clé</label>
              </div>
              <div class="input-field col s12 m4 l4">
                <i class="material-icons prefix">location_on</i>
                <input id="icon_ville" type="tel" class="validate">
                <label for="icon_ville">Ville ou code postal</label>
              </div>
              <div class="input-field col s12 m1 l1">
                <a class="btn-floating btn-large waves-effect waves-light orange "><i class="material-icons">search</i></a>
              </div>
            </div>
          </form>
        </div>
        {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
        <a href="{{ path('evenement_new') }}" class="btn">Créer un événement</a>
        {% else %}
            <a href="/login" class="btn">Créer un événement</a>
        {% endif %}</li>
      </div>
    </div>
  </div>
  <div class="parallax">
    <img src="{{ asset('images/sacshop.jpg') }}">
  </div>

</div>
<div class="divider"></div>
  <div class="col m12 s12 l2">
    <div class="row">
      <div class="col l3 s12 m3 offset-m1 offset-l1">
        <div class="collection ">
          <h4 class="cyan-text center-align">Catégories</h4>
          <hr>
          <a href="#!" class="collection-item grey-text text-darken-3">Vide-dressing</a>
          <a href="#!" class="collection-item grey-text text-darken-3">Vide-grenier</a>
          <a href="#!" class="collection-item grey-text text-darken-3">Jeux vidéo</a>
          <a href="#!" class="collection-item grey-text text-darken-3">Puériculture</a>
          <a href="#!" class="collection-item grey-text text-darken-3">Jeux ou jouets</a>
          <a href="#!" class="collection-item grey-text text-darken-3">Fournitures de bureau</a>
          <a href="#!" class="collection-item grey-text text-darken-3">Ameublement</a>
          <a href="#!" class="collection-item grey-text text-darken-3">Electromenager</a>
          <a href="#!" class="collection-item grey-text text-darken-3">Linge de maison</a>
        </div>
      </div>
      <div class="col l6 s12 m6">
        <div id="tri">
        <select class="icons">
          <option value="" disabled selected>Trier</option>
          <option value="">Date</option>
          <option value="">Nombre de personne</option>
        </select>
        <label>Images in select</label>
      </div>
        <div class="divider"></div>
          {% for evenement in evenements|reverse %}
            <div class="card">
          <div class="row">
            <div class="col l3 m3 s12 valign-wrapper">
              <a href="{{ path('evenement_show', { 'id': evenement.id }) }}"><img src="{{ asset(evenement.getCoverWebPath) }}" alt="" class="scale"></a>
            </div>
            <div class="col l5 m5 s12">
              <h5 class="title">{{ evenement.titre |capitalize }}</h5>
              <p>{% if evenement.dateDebut %}{{ evenement.dateDebut|date('d M') }}{% endif %} au {% if evenement.dateFin %}{{ evenement.dateFin|date('d M Y') }}{% endif %}<br>
                 {% if evenement.heureDebut %}{{ evenement.heureDebut|date('H:i') }}{% endif %} à {% if evenement.heureFin %}{{ evenement.heureFin|date('H:i') }}{% endif %}<br>
                 {{ evenement.categorie.nom }}<br>
                 {{ evenement.place }} places <br>
                 {{evenement.participants|length }} inscrits <br>
                 Organsisé par <span class="cyan-text">{{ evenement.utilisateur.prenom|capitalize }}</span>
              </p>
            </div>
            {% if evenement.participants|length == evenement.place %}
            <div class="col l3 m3 s12 center-align ">
              <div class="btnpadding">
                <a href="{{ path('evenement_show', { 'id': evenement.id }) }}" class="btn">Voir</a>
              </div class="btnpadding" >
              <div>
                <a href="{{ path('inscrire', { 'id': evenement.id }) }}" class="btn disabled">S'inscrire</a>
              </div>
            </div>
          </div>
          {% else %}
          <div class="col l3 m3 s12 center-align ">
            <div class="btnpadding">
              <a href="{{ path('evenement_show', { 'id': evenement.id }) }}" class="btn">Voir</a>
            </div class="btnpadding" >
            <div>
              <a href="{{ path('inscrire', { 'id': evenement.id }) }}" class="btn">S'inscrire</a>
            </div>
          </div>
        </div>
          {% endif %}

          </div>

          {% endfor %}
          <div class="">
            <ul class="pagination">
              <li class="disabled"><a href="#!"><i class="material-icons">chevron_left</i></a></li>
              <li class="active"><a href="#!" class="btn">1</a></li>
              <li class="waves-effect"><a href="#!" class="btn">2</a></li>
              <li class="waves-effect"><a href="#!" class="btn">3</a></li>
              <li class="waves-effect"><a href="#!" class="btn">4</a></li>
              <li class="waves-effect"><a href="#!" class="btn">5</a></li>
              <li class="waves-effect"><a href="#!" class="btn"><i class="material-icons">chevron_right</i></a></li>
            </ul>
          </div>
      </div>
    </div>
  </div>

{% endblock %}

{% block stylesheets %}
<style>
td{
  text-align: center;
}

.select-wrapper{
  width: 40%;
  color:#00bcd4;
}

.dropdown-content li>a, .dropdown-content li>span{
  color:#00bcd4;
}

.materialboxed{
  width: 50%;
}
#imgCover{
  width: 100%;
}

input{
  color: black;
}

.scale{
  padding-top:25px;
  max-width: 100%;
  vertical-align: middle;
}
.btnpadding{
  padding-top:40px;
  padding-bottom:20px;

}

.intro-text {
	font-size: 50px;
	color: #fff;
	text-align: center;
	margin-top: 15%;
}


@media screen and(max-width: 600px) {
  .select-wrapper{
    width: 50%;
  }
}
</style>
{% endblock %}

