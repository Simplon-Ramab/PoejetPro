{% extends 'base.html.twig' %}

{% block body %}

<div class="slider z-depth-2" >
    <ul class="slides">
      <li>
        <img src="{{ asset('images/livingroom.jpg') }}" > <!-- random image -->
        <div class="caption center-align">
          <h3 class="orange-text">Discuter, négocier, échanger</h3>
          <h5 class="light grey-text text-lighten-3">Discuter, négocier, échanger</h5>
        </div>
      </li>
      <li>
        <img src="{{ asset('images/shopping.jpg') }}"> <!-- random image -->
        <div class="caption center-align">
          <h3>Vider ou remplir votre appartement!</h3>
          <h5 class="light grey-text text-lighten-3">Here's our small slogan.</h5>
        </div>
      </li>
      <li>
        <img src="{{ asset('images/sacshop.jpg') }}"> <!-- random image -->
        <div class="caption center-align">
          <h3 class="grey darken-3">This is our big Tagline!</h3>
          <h5 class="light grey-text text-lighten-3">Here's our small slogan.</h5>
        </div>
      </li>
    </ul>
  </div>
  <div class="divider"></div>
    <div class="section">
  <h4 class="center-align">Prochaines dates</h4>
  <div class="divider"></div>
  <div id="wrapper">
    <div class="container">
      <div class="row">
        {% for evenement in evenements %}
        <div class="col s12 m4 l3">
          <div class="card medium z-depth-1">
            <div class="card-image">
              <a href="{{ path('evenement_show', { 'id': evenement.id }) }}"><img class="responsive-img" src="{{evenement.getCoverWebPath}}">  </a>
            </div>
            <div class="card-stacked">
              <div class="card-content">
                <a href="{{ path('evenement_show', { 'id': evenement.id }) }}"><h5 class="header">{{ evenement.titre }}</h5></a>
                <h6>{{ evenement.dateDebut|date('d-m-Y') }}</h6>
                <a class="btn-floating halfway-fab waves-effect waves-light red"><i class="material-icons">add</i></a>
              </div>
            </div>
          </div>
          <div class="divider"></div>
        </div>

        {% endfor %}
      </div>
    </div>
    </div>
  </div>
  <div class="divider"></div>
  <div class="section">
<h4 class="center-align">Bientôt complet</h4>
<div class="divider"></div>
</div>




{% endblock %}

{% block javascripts %}
  <script >
  $(document).ready(function(){
  $('.slider').slider({
        indicators: false,
        height: 800
      });
});
  </script>
{% endblock %}

{% block stylesheets %}
<style>

/*
orange => #ff9800
cyan > #00bcd4
*/
.card.medium {
    height: 300px;
    box-shadow: 0 1px 1px 0 rgba(0,0,0,0.14);
}

.divider{
  height: 2em;
  background-color: #fff;
}

i.material-icons{
  background-color: #ff9800;
}


</style>
{% endblock %}
