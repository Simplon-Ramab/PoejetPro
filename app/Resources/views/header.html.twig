        <a href="/" class="brand-logo"><img src="{{ asset('images/videhomelogo.png') }}" ></a>
        <a href="#" data-activates="mobile-demo" class="button-collapse cyan-text"><i class="material-icons">menu</i></a>
        <ul id="nav-mobile" class="right hide-on-med-and-down">
          {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
          <li class="col md 3"><a href="{{ path('evenement_index') }}">VideHomes</a></li>
              <!--{{ 'layout.logged_in_as'|trans({'%username%': app.user.username}, 'FOSUserBundle') }} |-->
