
{% block header %}
<div class="navbar-fixed">
  <nav class="transparent z-depth-0">
    <div class="nav-wrapper container-fluid">
      <a href="#" class="brand-logo">VideHome</a>
      <ul id="nav-mobile" class="right hide-on-med-and-down">
        {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
            <!--{{ 'layout.logged_in_as'|trans({'%username%': app.user.username}, 'FOSUserBundle') }} |-->
            <li class="col md 3"><a href="{{ path('evenement_index') }}"><i class="fa fa-home" aria-hidden="true"></i>VideHome</a></li>
            <li class="col md 3"><a href="{{ path('fos_user_profile_show') }}"><i class="fa fa-user" aria-hidden="true"></i>
              {{ 'Mon compte'|trans({}, 'FOSUserBundle') }}
            </a></li>
            <li class="col md 3"><a href="{{ path('fos_user_security_logout') }}"><i class="fa fa-sign-out" aria-hidden="true"></i>
              {{ 'Deconnexion'|trans({}, 'FOSUserBundle') }}
            </a></li>
        {% else %}
        <li class="col md 3"><a href="{{ path('fos_user_security_login') }}"><i class="fa fa-sign-in" aria-hidden="true"></i>
          Connexion</a></li>
        <li><a href="{{ path('fos_user_registration_register') }}"><i class="fa fa-user-plus" aria-hidden="true"></i>
          Inscription</a></li>
          {% endif %}
      </ul>
    </div>
  </nav>
</div>



<div>
    {% block fos_user_content %}
    {% endblock fos_user_content %}
</div>

{% endblock %}

{% block javascripts %}
<script>

$(function(){
	var navbar = $('.navbar');

	$(window).scroll(function(){
		if($(window).scrollTop() <= 40){
			navbar.removeClass('navbar-scroll');
		} else {
			navbar.addClass('navbar-scroll');
		}
	});
});


</script>
{% endblock %}

{% block stylesheets %}
<style>

body{
  color: #424242;
  font-family: 'Roboto'
}

nav ul a {
  background-color: #26c6da;
  color:white;
  border: #26c6da 1px solid;
  font-size: 1.1rem;
  margin-right: 15px;
  margin-top: 20px;
  border-radius: 2px;
}

nav .nav-wrapper i{
    height: 0px;
}



nav ul a:hover {
  background-color: white;
  color:#26c6da;

}

.navbar-fixed {
  position: absolute;
  z-index:999999999;
}

.nav-wrapper {
  padding-left: 5px;
}

nav, nav .nav-wrapper i, nav a.button-collapse, nav a.button-collapse i {
    line-height: 34px;
}

</style>
{% endblock %}
