{% block javascripts %}
<script>

$(function(){
	var navbar = $('.navbar');

	$(window).scroll(function(){
		if($(window).scrollTop() <= 40){
			navbar.removeClass('navbar-scroll');
		} else {
			navbar.addClass('navbar-scroll');
		}
	});
});


</script>
{% endblock %}

