{% trans_default_domain 'FOSUserBundle' %}

<div class="container regis">
  <a href="/" class="brand-logo animated zoomIn"><img src="{{ asset('images/logoblanc.png') }}" ></a>
  <div class="row" style="padding-top: 8em">

    <div class="col m6 offset-m3 animated bounceInDown">
      <div class="card-panel hoverable">
        {% if error %}
          <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}
        <div class="row center-align ">
          <i class="large material-icons cyan-text">perm_identity</i>
        </div>

        <form action="{{ path("fos_user_security_check") }}" method="post">
          {% if csrf_token %}
              <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
          {% endif %}

          <label for="username">{{ 'security.login.username'|trans }}</label>
          <input type="text" id="username" name="_username" value="{{ last_username }}" required="required" />

          <label for="password">{{ 'security.login.password'|trans }}</label>
          <input type="password" id="password" name="_password" required="required" />

          <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
          <label for="remember_me">{{ 'security.login.remember_me'|trans }}</label>
          <div class="center-align">
            <input type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" class="  waves-effect waves-light btn amber darken-2"/>
            <a href="{{ path('fos_user_registration_register') }}" class="  waves-effect waves-light btn amber darken-2">S'inscrire</a>
          </div>
        </form>
      </div>
    </div>
  </div>

{% block stylesheets %}
<style>
  body{
    background-color: #00bcd4;
  }
  .brand-logo > img {
    position: absolute;
    padding: 5px;
    margin-left: 340px;
    margin-top: 20px;
  }

</style>
{% endblock %}
