{% trans_default_domain 'FOSUserBundle' %}

<div class="container regis">
  <div class="row center-align">
    <a href="/" class="brand-logo animated zoomIn "><img src="{{ asset('images/logoblanc.png') }}" ></a>
  </div>
  <div class="row ">
    <div class="col m6 offset-m3 animated bounceInDown s12">
      <div class="card-panel hoverable">
        <div class="row center-align ">
          <i class="large material-icons cyan-text ">perm_identity</i>
        </div>
        {{ form_start(form, {'method': 'post', 'action': path('fos_user_registration_register'), 'attr': {'class': 'fos_user_registration_register'}}) }}
          {{ form_widget(form) }}
            <div class="center-align">
              <input class="  waves-effect waves-light btn amber darken-2" type="submit" value="{{ 'registration.submit'|trans }}" />
            </div>
          {{ form_end(form) }}
        </div>
      </div>
  </div>




{% block stylesheets %}
<style>
  body{
    background-color: #00bcd4;
  }


</style>
{% endblock %}
